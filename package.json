{
    "name": "ulbi-tv-advanced-course",
    "version": "1.0.0",
    "main": "index.js",
    "author": "Ilya Tulin",
    "license": "MIT",
    "scripts": {
        "build:prod": "webpack --env mode=production",
        "build:dev": "webpack --env mode=development",
        "coverage": "yarn test --coverage",
        "create-component": "ts-node ./tools/create-component",
        "drop-cache": "rm -rf node_modules/.cache .webpackcache .jestcache .eslintcache .stylelintcache .tersercache",
        "eslint": "npx eslint \"**/*.{js, jsx, ts,tsx}\"",
        "eslint:fix": "npx eslint \"**/*.{js, jsx, ts, tsx}\" --fix",
        "start": "yarn drop-cache && webpack serve --env port=3000",
        "stylelint": "npx stylelint \"**/*.{css, scss}\"",
        "stylelint:fix": "npx stylelint \"**/*.{css, scss}\" --fix",
        "storybook": "start-storybook -p 6006 -c ./config/storybook",
        "storybook:build": "build-storybook -c ./config/storybook",
        "test": "jest",
        "test-ui": "npx loki test",
        "test-ui-ci": "loki --requireReference --reactUri file:./storybook-static",
        "test-ui-approve": "npx loki approve"
    },
    "devDependencies": {
        "@babel/core": "^7.17.5",
        "@babel/preset-env": "^7.16.11",
        "@babel/preset-react": "^7.16.7",
